@model SignUpDTO

@{
    ViewData["Title"] = "Sign Up";
}

<h1>Sign Up</h1>
<form style="display: flex; flex-direction: column; gap: 5px;" asp-controller="Identity" asp-action="SignUp" method="post">
    @Html.ValidationSummary()
    <input type="text" asp-for="FullName" placeholder="Enter you Full Name" />
    <input type="email" asp-for="Email" placeholder="Enter you Email" />
    <input type="password" asp-for="Password" placeholder="Enter you Password" />

    <select>
        <option disabled>Select you Role</option>
        @foreach (var role in Model.Roles)
        {
            <option>@role</option>
        }
    </select>
    <input type="submit" name="Submit" />
</form>
